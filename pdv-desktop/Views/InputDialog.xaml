<Window x:Class="PdvDesktop.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        Height="200" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                  Text="{Binding Prompt}" 
                  Margin="0,0,0,15"
                  TextWrapping="Wrap"/>

        <TextBox Grid.Row="1" 
                x:Name="txtInput" 
                Height="35" 
                FontSize="16"
                Padding="5"
                Text="{Binding ResponseText, UpdateSourceTrigger=PropertyChanged}"
                KeyDown="TxtInput_KeyDown"/>

        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="OK" 
                   Width="80" 
                   Height="35"
                   Margin="0,0,10,0"
                   IsDefault="True"
                   Click="BtnOk_Click"/>
            <Button Content="Cancelar" 
                   Width="80" 
                   Height="35"
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>


