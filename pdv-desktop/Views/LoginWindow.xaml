<Window x:Class="PdvDesktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDV Desktop - Login" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid>
        <Border Background="White" 
                CornerRadius="10" 
                Padding="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="PDV Desktop" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#667eea"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <TextBlock Text="Operador" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="txtOperador" 
                        Height="40" 
                        FontSize="16"
                        Padding="10"
                        Text="{Binding Operador, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Senha" 
                          FontWeight="SemiBold" 
                          Margin="0,20,0,5"/>
                <PasswordBox x:Name="txtSenha" 
                            Height="40" 
                            FontSize="16"
                            Padding="10"/>

                <!-- Status da API -->
                <Border x:Name="borderApiStatus" 
                       Background="#fff3cd" 
                       BorderBrush="#ffc107" 
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="10"
                       Margin="0,10,0,0"
                       Visibility="Visible">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”" 
                                  FontSize="16" 
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="lblApiStatus" 
                                  Text="Testando conexÃ£o com a API..." 
                                  FontSize="12"
                                  Foreground="#856404"
                                  VerticalAlignment="Center"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <TextBlock x:Name="lblErro" 
                          Foreground="Red" 
                          Margin="0,10,0,0"
                          TextWrapping="Wrap"
                          Visibility="Collapsed"/>

                <!-- BotÃµes -->
                <StackPanel Orientation="Horizontal" 
                           Margin="0,20,0,0"
                           HorizontalAlignment="Stretch">
                    <Button x:Name="btnTestApi" 
                           Content="ðŸ” Testar API" 
                           Height="40"
                           FontSize="14"
                           Background="#17a2b8"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"
                           Margin="0,0,10,0"
                           Click="BtnTestApi_Click"
                           HorizontalAlignment="Left"/>
                    
                    <Button x:Name="btnLogin" 
                           Content="Entrar" 
                           Height="45"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Background="#667eea"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="BtnLogin_Click"
                           IsEnabled="False"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center"
                           Style="{StaticResource DisabledButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
