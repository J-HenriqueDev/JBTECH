<UserControl x:Class="PdvDesktop.Views.Pages.ProdutosPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Background="White" CornerRadius="5" Padding="20">
            <StackPanel>
                <TextBlock Text="Consulta de Produtos" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox x:Name="txtBusca" 
                            Width="400" 
                            Height="40" 
                            FontSize="16"
                            Padding="10"/>
                    <Button Content="Buscar" 
                           Width="100" 
                           Height="40" 
                           Margin="10,0,0,0"
                           Click="BtnBuscar_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgProdutos" 
                         AutoGenerateColumns="False"
                         IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" Binding="{Binding CodigoBarras}" Width="150"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Preço" Binding="{Binding PrecoVenda, StringFormat=C2}" Width="120"/>
                        <DataGridTextColumn Header="Estoque" Binding="{Binding Estoque}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>


