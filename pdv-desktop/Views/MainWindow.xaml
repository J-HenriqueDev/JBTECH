<Window x:Class="PdvDesktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDV Desktop" 
        Height="1080" 
        Width="1920"
        WindowState="Maximized"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="PDV - Ponto de Venda" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <TextBlock x:Name="lblOperador" 
                              Text="{Binding OperadorNome}" 
                              Foreground="White" 
                              Margin="0,0,15,0"
                              VerticalAlignment="Center"/>
                    <Button Content="Sair" 
                           Width="80" 
                           Height="35"
                           Background="#dc3545"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="BtnSair_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Menu Lateral -->
            <Border Grid.Column="0" 
                   Background="White" 
                   CornerRadius="5"
                   Padding="10">
                <StackPanel>
                    <Button Content="ðŸ›’ Checkout" 
                           Height="50" 
                           Margin="0,5"
                           Style="{StaticResource MenuButtonStyle}"
                           Click="BtnCheckout_Click"/>
                    <Button Content="ðŸ“¦ Produtos" 
                           Height="50" 
                           Margin="0,5"
                           Style="{StaticResource MenuButtonStyle}"
                           Click="BtnProdutos_Click"/>
                    <Button Content="ðŸ’° Caixa" 
                           Height="50" 
                           Margin="0,5"
                           Style="{StaticResource MenuButtonStyle}"
                           Click="BtnCaixa_Click"/>
                </StackPanel>
            </Border>

            <!-- Ãrea de ConteÃºdo -->
            <ContentControl x:Name="contentArea" 
                          Grid.Column="1" 
                          Margin="20,0,0,0"/>
        </Grid>
    </Grid>
</Window>


