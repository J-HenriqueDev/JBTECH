<Window x:Class="PdvConfigurador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurador PDV" 
        Height="720" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <TextBlock Grid.Row="0" 
                  Text="Configurador PDV Desktop" 
                  FontSize="24" 
                  FontWeight="Bold" 
                  Margin="0,0,0,30"
                  HorizontalAlignment="Center"/>

        <!-- FormulÃ¡rio -->
        <Border Grid.Row="1" 
               Background="White" 
               CornerRadius="5" 
               Padding="30"
               BorderBrush="#DDD"
               BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- API URL -->
                <TextBlock Grid.Row="0" 
                          Text="URL da API" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" 
                        x:Name="txtApiUrl" 
                        Height="40" 
                        FontSize="14"
                        Padding="10"
                        Margin="0,0,0,20"
                        Text="{Binding ApiUrl, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Impressora -->
                <TextBlock Grid.Row="2" 
                          Text="ConfiguraÃ§Ãµes da Impressora" 
                          FontWeight="Bold" 
                          FontSize="16"
                          Margin="0,10,0,15"
                          Foreground="#667eea"/>

                <TextBlock Grid.Row="3" 
                          Text="Porta da Impressora" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <Grid Grid.Row="4" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0" 
                             x:Name="cmbPrinterPort" 
                             Height="40" 
                             FontSize="14"
                             Margin="0,0,10,0"
                             SelectionChanged="CmbPrinterPort_SelectionChanged"/>
                    <Button Grid.Column="1" 
                           Content="Atualizar" 
                           Width="100" 
                           Height="40"
                           Click="BtnRefreshPorts_Click"/>
                </Grid>

                <TextBlock Grid.Row="5" 
                          Text="Tipo de Impressora" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <ComboBox Grid.Row="6" 
                         x:Name="cmbPrinterType" 
                         Height="40" 
                         FontSize="14"
                         Margin="0,0,0,20">
                    <ComboBoxItem Content="Epson" Tag="epson" IsSelected="True"/>
                    <ComboBoxItem Content="Star" Tag="star"/>
                    <ComboBoxItem Content="Bematech" Tag="bematech"/>
                </ComboBox>

                <!-- BalanÃ§a -->
                <TextBlock Grid.Row="7" 
                          Text="ConfiguraÃ§Ãµes da BalanÃ§a" 
                          FontWeight="Bold" 
                          FontSize="16"
                          Margin="0,10,0,15"
                          Foreground="#667eea"/>

                <TextBlock Grid.Row="8" 
                          Text="Porta Serial da BalanÃ§a" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <ComboBox Grid.Row="9" 
                         x:Name="cmbScalePort" 
                         Height="40" 
                         FontSize="14"
                         Margin="0,0,0,10"/>

                <TextBlock Grid.Row="10" 
                          Text="Baud Rate" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <ComboBox Grid.Row="11" 
                         x:Name="cmbScaleBaudRate" 
                         Height="40" 
                         FontSize="14"
                         Margin="0,0,0,20">
                    <ComboBoxItem Content="9600" Tag="9600" IsSelected="True"/>
                    <ComboBoxItem Content="4800" Tag="4800"/>
                    <ComboBoxItem Content="2400" Tag="2400"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Status da API -->
        <Border Grid.Row="2" 
               x:Name="borderApiStatus" 
               Background="#fff3cd" 
               BorderBrush="#ffc107" 
               BorderThickness="1"
               CornerRadius="5"
               Padding="10"
               Margin="0,20,0,10"
               Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="lblApiStatus" 
                          Text="Testando conexÃ£o com a API..." 
                          FontSize="12"
                          Foreground="#856404"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- BotÃµes -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,0,0,0">
            <Button Content="ðŸ” Testar API" 
                   Width="130" 
                   Height="45"
                   FontSize="14"
                   Background="#17a2b8"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,10,0"
                   Click="BtnTestarApi_Click"/>
            <Button Content="Salvar" 
                   Width="120" 
                   Height="45"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Background="#28a745"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,10,0"
                   Click="BtnSalvar_Click"/>
            <Button Content="Testar Impressora" 
                   Width="150" 
                   Height="45"
                   FontSize="14"
                   Background="#6c757d"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,10,0"
                   Click="BtnTestarImpressora_Click"/>
            <Button Content="Testar BalanÃ§a" 
                   Width="150" 
                   Height="45"
                   FontSize="14"
                   Background="#ffc107"
                   Foreground="Black"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="BtnTestarBalanÃ§a_Click"/>
        </StackPanel>
    </Grid>
</Window>
